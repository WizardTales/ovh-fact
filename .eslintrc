{
  "ignorePatterns": ["vendor"],
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "root": true,
  "rules": {
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "quotes": [
      "error",
      "single",
      { "avoidEscape": true, "allowTemplateLiterals": true }
    ]
  },
  "globals": {
    "KUBECONFIG": true,
    "CMD": true
  }
}
